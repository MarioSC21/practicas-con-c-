<Page x:Class="DemoWpfApp1.Formulario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoWpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Formulario">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0">ID</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Name="txid" ></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1">Nombre</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" Name="txNombre" ></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="2">Descripcion</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="2" Name="txDescripcion" ></TextBox>
        <Button Grid.Column="1" Grid.Row="3" Click="Button_Click">Guardar</Button>
    </Grid>
</Page>
